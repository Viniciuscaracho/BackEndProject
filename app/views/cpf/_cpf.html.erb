<%= turbo_frame_tag :create_cpf do %>
  <%= form_with(model: @cpf, url: cpf_index_path(@cpf)) do |form| %>
    <div class="mb-4">
      <%= form.label :cpf, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :cpf, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit class: "bg-blue-500 cursor-pointer hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>

    <% if @cpf.errors.any? %>
      <div class="text-red-500">
        <% @cpf.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
